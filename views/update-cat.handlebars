<html>
<h1>Update {{cats.fname}} {{cats.lname}}:</h1>
<form id="update-cats" action="/people" method="post">
    First name: <input type="text" name="name" value="{{cats.name}}"><br>
    Last name: <input type="text" name="lname" value="{{cats.lname}}"><br>
    Homeworld: <select name="homeworld" id="planet-selector"> 
        {{#each planets}}
            <option value="{{id}}">{{name}}</option>
        {{/each}}
    </select><br>
    Age: <input type="number" name="age" value="{{cats.age}}"><br>
</form>
<button onclick="updatePerson({{cats.id}})">Update</button>
<script defer>selectPlanet({{cats.homeworld}});</script>
</html>
